                                           Grid.Column="4"
                                           Style="{StaticResource OperatorButtonStyle}"
                                           AutomationProperties.AutomationId="invtanhButton"
                                           ButtonId="InvTanh"
                                           Content="tanh⁻¹"
                                           Visibility="{Binding IsHyperbolicChecked, Converter={StaticResource BooleanToVisibilityConverter}}"/>
